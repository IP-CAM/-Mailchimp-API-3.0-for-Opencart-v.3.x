<?xml version="1.0" encoding="utf-8"?>
<modification>
  <name>Mailchimp for Opencart 3.0.x</name>
  <code>mailchimp-for-opencart3</code>
  <version>0.0.1-Alpha</version>
  <author>Tarcisio Ruas</author>
  <link>https://www.digitaldev.com.br</link>

  
<file path="admin/view/template/setting/setting.twig">
    <operation>
      <search index="12"><![CDATA[<div class="form-group">]]></search>
      <add position="before"><![CDATA[
        <div class="form-group">
          <label class="col-sm-2 control-label" for="input-city">{{ entry_city }}</label>
          <div class="col-sm-10">
            <input type="text" name="config_city" value="{{ config_city }}" placeholder="{{ entry_city }}" id="input-city" class="form-control" />
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label" for="input-zip">{{ entry_zip }}</label>
          <div class="col-sm-10">
            <input type="text" name="config_zip" value="{{ config_zip }}" placeholder="{{ entry_zip }}" id="input-zip" class="form-control" />
          </div>
        </div>

      ]]></add>
    </operation>
  </file>
</modification>