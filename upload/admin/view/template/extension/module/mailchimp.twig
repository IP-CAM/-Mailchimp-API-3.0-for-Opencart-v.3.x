{{ header }}
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        {% if module_mailchimp_status %}
        <a href="{{ sync }}" data-toggle="tooltip" title="{{ button_sync }}" class="btn btn-primary"><i class="fa fa-refresh"></i></a>
        {% endif %}
        <button type="submit" form="form-mailchimp" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}

    <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_config }}</h3>
        </div>
        <div class="panel-body">
            <form method="post" id="form-mailchimp" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                    <div class="col-sm-10">
                        <select name="module_mailchimp_status" id="input-status" class="form-control">
                            {% if module_mailchimp_status %}
                            <option value="1" selected="selected">{{ text_enabled }}</option>
                            <option value="0">{{ text_disabled }}</option>
                            {% else %}
                            <option value="1">{{ text_enabled }}</option>
                            <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                        </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-status">{{ entry_api_key }}</label>
                    <div class="col-sm-10">
                        <input name="module_mailchimp_api_key" id="input-api-key" class="form-control" required value="{{ module_mailchimp_api_key }}"/>
                    </div>
                  </div>
            </form>
        </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
       {% if not module_mailchimp_status %}
       <div class="alert alert-info">
          <i class="fa fa-check-circle"></i> 
          {{ text_module_disabled }}
        </div>
       {% endif %}

        {% if errorMessage %}
        <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ errorMessage }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}

        {% if successMessage %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ successMessage }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}

         {% if warningMessage %}
        <div class="alert alert-warning alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ warningMessage }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}

          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td class="text-left">
                    {{ column_synchronized_entity }}
                  </td>

                  <td class="text-left">
                    {{ column_registered_total }}
                  </td>

                  <td class="text-left">
                    {{ column_synchronized_total }}
                  </td>

                  <td class="text-left">
                    {{ column_action }}
                  </td>
                </tr>
              </thead>

              <tbody>
              
                <tr>
                  <td class="text-left">
                    {{ text_synchronized_contacts }}
                  </td>

                  <td class="text-left">
                    {{ totalListContacts }}
                  </td>

                  <td class="text-left">
                    {{ synchronizedListsContacts }}
                  </td>

                  <td class="text-left">
                    <a href="{{ syncLists }}" data-toggle="tooltip" title="" class="btn btn-primary"><i class="fa fa-refresh"></i></a>
                  </td>
                </tr>

                <tr>
                  <td class="text-left">
                    {{ text_synchronized_store }}
                  </td>

                  <td class="text-left">
                    1
                  </td>

                  <td class="text-left">
                    {{ synchronizedStores }}
                  </td>

                  <td class="text-left">
                    <a href="{{ syncStore }}" data-toggle="tooltip" title="" class="btn btn-primary"><i class="fa fa-refresh"></i></a>
                  </td>
                </tr>

                <tr>
                  <td class="text-left">
                    {{ text_synchronized_products }}
                  </td>

                  <td class="text-left">
                    {{ totalProducts }}
                  </td>

                  <td class="text-left">
                    {{ synchronizedProducts }}
                  </td>

                  <td class="text-left">
                    <a href="{{ syncProducts }}" data-toggle="tooltip" title="" class="btn btn-primary"><i class="fa fa-refresh"></i></a>
                  </td>
                </tr>

                <tr>
                  <td class="text-left">
                    {{ text_synchronized_customers }}
                  </td>

                  <td class="text-left">
                    {{ totalCustomers }}
                  </td>

                  <td class="text-left">
                    {{ synchronizedCustomers }}
                  </td>

                  <td class="text-left">
                    <a href="{{ syncCustomers }}" data-toggle="tooltip" title="" class="btn btn-primary"><i class="fa fa-refresh"></i></a>
                  </td>
                </tr>

                <tr>
                  <td class="text-left">
                    {{ text_synchronized_orders }}
                  </td>

                  <td class="text-left">
                    {{ totalOrders }}
                  </td>

                  <td class="text-left">
                    {{ synchronizedOrders }}
                  </td>

                  <td class="text-left">
                    <a href="{{ syncOrders }}" data-toggle="tooltip" title="" class="btn btn-primary"><i class="fa fa-refresh"></i></a>
                  </td>
                </tr>


                <tr>
                  <td class="text-left">
                    {{ text_synchronized_carts }}
                  </td>

                  <td class="text-left">
                    {{ totalCarts }}
                  </td>

                  <td class="text-left">
                    {{ synchronizedCarts }}
                  </td>

                  <td class="text-left">
                    <a href="{{ syncCarts }}" data-toggle="tooltip" title="" class="btn btn-primary"><i class="fa fa-refresh"></i></a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}